<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pager1img"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/image_reducer_icon"
        android:layout_marginBottom="@dimen/margin_30"
        />

    <TextView
        android:id="@+id/pager1text"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="all content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_40"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/isAgreePrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>

        <TextView
            android:id="@+id/iAgreeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="I agree to the Privacy Policy."/>


    </LinearLayout>

    <Button
        android:id="@+id/pager1buton"
        android:layout_width="200dp"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_height="wrap_content"
        android:background="@drawable/invite_button_theme"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

